<header class="mdc-top-app-bar mdc-top-app-bar--fixed<%= current_page?(root_path) ? '' : '-scrolled' %> mdc-theme--transparent mdc-theme--on-secondary" data-mdc-auto-init="MDCTopAppBar">
  <div class="mdc-top-app-bar__row">
    <div class="mdc-top-app-bar__section mdc-top-app-bar__section--align-start">
      <span class="mdc-top-app-bar__title secondary-typography">iFoodX</span>
    </div>
    <div class="mdc-top-app-bar__section mdc-top-app-bar__section--align-end">
      <button class="mdc-button mdc-top-app-bar__action-item mdc-theme--on-secondary" data-mdc-auto-init="MDCRipple">
        <span class="mdc-button__ripple"></span>
        <span class="mdc-button__label">inicio</span>
      </button>
      <button class="mdc-button mdc-top-app-bar__action-item mdc-theme--on-secondary" data-mdc-auto-init="MDCRipple">
        <span class="mdc-button__ripple"></span>
        <span class="mdc-button__label">nuevo pedido</span>
      </button>
      <button class="mdc-button mdc-button--raised mdc-top-app-bar__action-item" data-mdc-auto-init="MDCRipple">
        <span class="mdc-button__ripple"></span>
        <span class="mdc-button__label">acceder</span>
      </button>
    </div>
  </div>
</header>
