<%= render partial: 'application/home_banner' %>

<div class="mdc-card mdc-elevation--z18" id="home-card">
  <%= render partial: 'application/services' %>
  <% unless logged_in? %>
    <div class="mdc-layout-grid" id="bottom">
      <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell--span-1"></div>
        <div class="mdc-layout-grid__cell--span-10">
          <h4 class="mdc-typography--headline4 secondary-typography">¿Qué estas esperando?</h4>
        </div>
        <div class="mdc-layout-grid__cell--span-1"></div>
      </div>
      <div class="mdc-layout-grid__inner">
        <div class="mdc-layout-grid__cell--span-1"></div>
        <div class="mdc-layout-grid__cell--span-10">
          <h6 class="mdc-typography--headline6 secondary-typography">Únete ya a <strong>iFoodX</strong></h6>
          <%= link_to signup_view_path, class: 'mdc-button mdc-button--raised mdc-theme--secondary-bg mdc-theme--on-primary', data: { 'mdc-auto-init': 'MDCRipple' } do %>
            <span class="mdc-button__ripple"></span>
            <span class="mdc-button__label">crear cuenta</span>
          <% end %>
        </div>
        <div class="mdc-layout-grid__cell--span-1"></div>
      </div>
    </div>
  <% end %>
</div>

<%= stylesheet_link_tag 'app' %>
