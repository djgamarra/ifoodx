#signin {
  min-height: 100vh;
  width: 100%;
  background-image: url("<%= image_path 'login' %>");
  background-position: center;
  background-size: cover;
  background-color: rgba(38, 50, 56, .7);
  background-blend-mode: color-burn;
  display: flex;
  align-items: center;
  justify-content: center;

  .mdc-text-field {
    width: 100%;
  }

  &__blur {
    backdrop-filter: blur(4px);
    width: 100%;
    min-height: 100vh;
  }

  &__form {
    width: 100%;
    margin: 60px 10px 10px 10px !important;
  }

  .mdc-card {
    padding: 34px;
    height: 100%;
    text-align: center;

    & > * {
      margin: 0 0 20px 0;
    }

    :last-child {
      margin: 0;
    }

    .material-icons {
      margin: auto 13px;
    }
  }
}

