body {
  background-color: #eeeeee;
}

#home-card {
  margin: -50px calc(24px + 5vw) calc(20px + 5vw) calc(24px + 5vw);
  background-color: var(--mdc-theme-surface);
  overflow: hidden;
  position: relative;
  z-index: 3;
  border-radius: 15px;

  .secondary-typography {
    margin: 0;
    padding: 0;
  }
}

#home-banner {
  overflow-x: hidden !important;
  min-height: calc(100vmin + 50px);
  position: relative;
  z-index: 2;

  .home-banner {
    &__content {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      min-height: calc(100vmin + 50px);
      width: 100vw;
      display: flex;
      align-items: center;
      justify-content: center;

      &--text {
        overflow-x: hidden;
        padding: calc(24px + 5vw) calc(24px + 15vw) calc(24px + 5vw) calc(24px + 5vw);

        p, h3 {
          text-overflow: ellipsis !important;
        }

        :first-child {
          margin-bottom: 0;
        }
      }
    }

    &__slide {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      min-height: calc(100vmin + 50px);
      width: 100vw;
      background-position: center;
      background-color: rgba(38, 50, 56, .9);
      background-blend-mode: color-burn;
      background-size: cover;
      transition-delay: 1s;
      transition-property: opacity;
      transition-duration: 1s;
      opacity: 0;

      &.shown {
        transition-delay: 0ms;
        opacity: 1;
      }

      &#slide-0 {
        background-image: url("<%= image_path 'landing_0_img' %>");
      }

      &#slide-1 {
        background-image: url("<%= image_path 'landing_1_img' %>");
      }

      &#slide-2 {
        background-image: url("<%= image_path 'landing_2_img' %>");
      }
    }
  }
}

