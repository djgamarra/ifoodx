img {
  height: 50px;
  width: 50px;
}

.char-card {
  padding: 15px 30px 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  background-color: transparent;
  transition-property: background-color;
  transition-duration: 200ms;

  :first-child {
    transition-property: transform;
    transition-duration: 200ms;
  }

  &:hover {
    /*background-color: var(--mdc-theme-primary);*/

    :first-child {
      transform: scale(1.1);
    }
  }
}

#services {
  padding: 50px 0;
  text-align: center;

  :first-child {
    margin-bottom: 15px;
  }
}

#bottom {
  text-align: center;
  clip-path: polygon(0 0, 0 100%, 100% 100%, 100% 9%);
  width: 100%;
  background-color: var(--mdc-theme-primary);
  padding: 50px 10px;

  :first-child {
    margin-bottom: 25px;
  }
}

@media (max-width: 690px) {
  .home-banner__content--text {
    padding: 24px !important;
  }

  #home-card {
    margin: -50px 24px 24px 24px !important;
  }
}
