.mdc-top-app-bar {
  &.mdc-theme--transparent {
    background-color: transparent;
  }

  .mdc-top-app-bar__title {
    font-family: Montserrat, sans-serif;
  }
}

#home-banner {
  overflow-x: hidden !important;
  width: 100vw;

  .home-banner {
    &__content {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      min-height: 100vmin;
      width: 100vw;
      display: flex;
      align-items: center;
      justify-content: center;

      &--text {
        overflow-x: hidden;
        padding: calc(24px + 5vw) calc(24px + 15vw) calc(24px + 5vw) calc(24px + 5vw);

        p, h3 {
          font-family: Montserrat, sans-serif !important;
          text-overflow: ellipsis !important;
        }
      }
    }

    &__slide {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      min-height: 100vmin;
      width: 100vw;
      background-position: center;
      background-color: rgba(38, 50, 56, .9);
      background-blend-mode: color-burn;
      background-size: cover;
      transition-delay: 1s;
      transition-property: opacity;
      transition-duration: 1s;
      opacity: 0;

      &.shown {
        transition-delay: 0ms;
        opacity: 1;
      }

      &#slide-0 {
        background-image: url("<%= asset_path 'landing_0_img' %>");
      }

      &#slide-1 {
        background-image: url("<%= asset_path 'landing_1_img' %>");
      }

      &#slide-2 {
        background-image: url("<%= asset_path 'landing_2_img' %>");
      }
    }
  }
}

@media (max-width: 690px) {
  .home-banner__content--text {
    padding: 24px !important;
  }
}