#home-banner {
  overflow-x: hidden !important;
  min-height: 100vmin;

  .home-banner {
    &__content {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      min-height: 100vmin;
      width: 100vw;
      display: flex;
      align-items: center;
      justify-content: center;

      &--text {
        overflow-x: hidden;
        padding: calc(24px + 5vw) calc(24px + 15vw) calc(24px + 5vw) calc(24px + 5vw);

        p, h3 {
          text-overflow: ellipsis !important;
        }
      }
    }

    &__slide {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      min-height: 100vmin;
      width: 100vw;
      background-position: center;
      background-color: rgba(38, 50, 56, .9);
      background-blend-mode: color-burn;
      background-size: cover;
      transition-delay: 1s;
      transition-property: opacity;
      transition-duration: 1s;
      opacity: 0;

      &.shown {
        transition-delay: 0ms;
        opacity: 1;
      }

      &#slide-0 {
        background-image: url("<%= image_path 'landing_0_img' %>");
      }

      &#slide-1 {
        background-image: url("<%= image_path 'landing_1_img' %>");
      }

      &#slide-2 {
        background-image: url("<%= image_path 'landing_2_img' %>");
      }
    }
  }
}

.mdc-button--outlined:not(:disabled) {
  border-color: #FFF;
}

img {
  height: 50px;
  width: 50px;
}

.char-card {
  padding: 15px 30px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  background-color: transparent;

  :first-child {
    transition-property: transform;
    transition-duration: 200ms;
  }

  &:hover {
    :first-child {
      transform: scale(1.1);
    }
  }
}

.secondary-typography {
  margin: 0;
  padding: 0;
}

#services {
  background-color: var(--mdc-theme-primary);

  &__bottom {
    background-image: url("<%= image_path 'wave' %>");
    background-size: cover;
    height: 200px;
    background-position: center;
  }
}

@media (max-width: 690px) {
  .home-banner__content--text {
    padding: 24px !important;
  }
}
